rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- دوال مساعدة ---
    function isOwner(storeId) {
      return request.auth != null && request.auth.uid == storeId;
    }

    // --- (جديد) قاعدة سجل الأجهزة ---
    // هذا الكولكشن يستخدم لفحص أهلية الجهاز قبل التسجيل
    match /device_registrations/{deviceId} {
      // القراءة: مسموح للجميع (عشان نفحص هل الجهاز موجود ولا لأ)
      allow read: if true;
      
      // الكتابة (الإنشاء/التحديث): مسموح للجميع (عشان نسجل الجهاز الجديد)
      // الحماية هنا بتتم عن طريق الكود (Logic) مش الـ Rules لأن المستخدم لسه ملوش هوية
      allow create, update: if true;
      
      // الحذف: ممنوع نهائياً
      allow delete: if false;
    }

    // --- باقي القواعد كما هي ---

    // 1. المتاجر (Stores)
    match /stores/{storeId} {
      allow read: if true;
      allow create: if request.auth.uid == storeId;
      allow update: if isOwner(storeId);
      allow delete: if false;

      match /stats/summary {
        allow read: if true;
        allow create, update: if true;
      }
      
      match /daily_stats/{day} {
        allow read, write: if true;
      }
    }

    // 2. المستخدمين
    match /users/{userId} {
      allow read: if true;
      allow create: if true; 
      allow update: if true; 
      allow delete: if isOwner(resource.data.storeId);
    }

    // 3. مفاتيح الترخيص
    match /license_keys/{keyId} {
      allow read: if true;
      allow update: if request.auth != null;
      allow create, delete: if false;
    }

    // 4. العمليات المالية
    match /wallets/{walletId} {
      allow read: if true;
      allow create, update: if true;
      allow delete: if isOwner(resource.data.storeId);
    }

    match /transactions/{transactionId} {
      allow read: if true;
      allow create, update: if true;
      allow delete: if isOwner(resource.data.storeId);
    }

    match /debts/{debtId} {
      allow read: if true;
      allow create, update: if true;
      allow delete: if isOwner(resource.data.storeId);
    }
  }
}